{% extends "AlumbradosTownyBundle::layout.html.twig" %}
{% block content %}
<h1>{{ town.name }}</h1>
<div class="row">
    <div class="col-sm-8">
        <h2>Residents</h2>
        {% set mayor = town.mayor %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="number">Plots</th>
                    <th class="string">Rank</th>
                </tr>
            </thead>
            <tbody>
                {% for resident in town.residents %}
                <tr>
                    <td>{{ resident.player.name }}</td>
                    <td class="number">0</td>
                    <td class="string">{% if resident == mayor %}Mayor{% else %}{{ resident.rank }}{% endif %}</td>
                </tr>
                {% endfor %}
            </tbody>                    
        </table>  
        <h2>Region</h2>
        <iframe src="http://192.168.178.24:8123/" class="map"></iframe>
    </div>
    <div class="col-sm-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Settings</h3>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>Firespread</dt>
                    <dd class="text-success">Off</dd>
                    <dt>PVP</dt>
                    <dd class="text-danger">On</dd>  
                    <dt>Explosions</dt>
                    <dd class="text-danger">Off</dd>       
                    <dt>Mobs</dt>
                    <dd class="text-success">On</dd>                     
                </dl>
            </div>
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Prices</h3>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>Upkeep</dt>
                    <dd>10</dd>
                    <dt>Tax</dt>
                    <dd>10</dd>  
                    <dt>Shop tax</dt>
                    <dd>25</dd>       
                    <dt>Embassy tax</dt>
                    <dd>15</dd>                     
                </dl>
            </div>
        </div>        
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Permissions</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Build</th>
                            <th>Destroy</th>
                            <th>Switch</th>
                            <th>Use</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-danger">Resident</td>
                            <td class="text-danger">Resident</td>
                            <td class="text-success">Resident</td>
                            <td class="text-success">Resident</td>
                        </tr>
                        <tr>
                            <td class="text-danger">Ally</td>
                            <td class="text-danger">Ally</td>
                            <td class="text-success">Ally</td>
                            <td class="text-success">Ally</td>
                        </tr>
                        <tr>
                            <td class="text-danger">Outsider</td>
                            <td class="text-danger">Outsider</td>
                            <td class="text-danger">Outsider</td>
                            <td class="text-danger">Outsider</td>
                        </tr>                        
                    </tbody>                    
                </table>
                    
            </div>
        </div>        
    </div>
</div>
{% endblock %}
